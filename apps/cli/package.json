{
  "name": "promptvc",
  "version": "0.1.7",
  "description": "CLI tool to wrap AI assistants and log prompts/diffs",
  "homepage": "https://prompt-vc.vercel.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/sehmim/PromptVC.git"
  },
  "bugs": {
    "url": "https://github.com/sehmim/PromptVC/issues"
  },
  "main": "dist/index.js",
  "bin": {
    "promptvc": "bin/promptvc",
    "promptvc-codex": "bin/promptvc-codex"
  },
  "files": [
    "bin",
    "dist",
    "hooks",
    "assets"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "prepublishOnly": "pnpm run build",
    "postinstall": "chmod +x hooks/* || true",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "kleur": "^4.1.5",
    "commander": "^11.1.0",
    "simple-git": "^3.22.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@promptvc/types": "workspace:*",
    "@types/node": "^22.0.0",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3"
  }
}
