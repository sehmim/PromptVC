{
  "name": "promptvc",
  "version": "0.1.1",
  "private": true,
  "description": "Version control for AI prompts - track, version, and visualize your AI-assisted coding sessions",
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
